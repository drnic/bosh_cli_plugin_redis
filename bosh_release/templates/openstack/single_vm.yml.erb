---
<%-
# Example source deployment file that can be used:
# ---
# name: NAME
# director_uuid: 4ae3a0f0-70a5-4c0d-95f2-7fafaefe8b9e
# networks: {}
# properties:
#   redis:
#     instance_type: m1.medium
#     security_groups: redis-server
#
# Then target that deployment file:
#
#     $ bosh deployment path/to/file/above
#
# Then apply this template:
#
#     $ bosh diff templates/openstack/single_vm.yml.erb
#
redis_sg = find("properties.redis.security_group")
redis_port = 6379
redis_password = random_string 12, :redis
redis_resource = find("properties.redis.resource")
redis_persistent_disk = find("properties.redis.persistent_disk")
-%>
name: <%= find("name") %>
director_uuid: <%= find("director_uuid") %>

release:
  name: redis
  version: latest

compilation:
  workers: 10
  network: default
  reuse_compilation_vms: true
  cloud_properties:
    instance_type: m1.small

update:
  canaries: 1
  canary_watch_time: 30000-300000
  update_watch_time: 30000-300000
  max_in_flight: 4
  max_errors: 1

networks:
- name: default
  type: dynamic
  cloud_properties:
    security_groups:
    - <%= redis_sg %>

resource_pools:
- name: small
  network: default
  size: <%= redis_resource == "small" ? 1 : 0 %>
  stemcell:
    name: bosh-stemcell
    version: latest
  cloud_properties:
    instance_type: m1.small

- name: medium
  network: default
  size: <%= redis_resource == "medium" ? 1 : 0 %>
  stemcell:
    name: bosh-stemcell
    version: latest
  cloud_properties:
    instance_type: m1.medium

- name: large
  network: default
  size: <%= redis_resource == "large" ? 1 : 0 %>
  stemcell:
    name: bosh-stemcell
    version: latest
  cloud_properties:
    instance_type: m1.large

- name: xlarge
  network: default
  size: <%= redis_resource == "xlarge" ? 1 : 0 %>
  stemcell:
    name: bosh-stemcell
    version: latest
  cloud_properties:
    instance_type: m1.xlarge

jobs:
- name: redis
  template: redis
  instances: 1
  resource_pool: <%= redis_resource %>
  networks:
  - name: default
    default:
    - dns
    - gateway
  persistent_disk: <%= redis_persistent_disk %>

properties:
  redis:
    resource: <%= redis_resource %>
    security_group: <%= redis_sg %>
    persistent_disk: <%= redis_persistent_disk %>
    port: <%= redis_port %>
    password: <%= redis_password %>
